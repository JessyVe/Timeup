<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fh.android.timeup">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity android:name=".OverviewActivity"
                  android:theme="@style/AppTheme.ActionBar.Transparent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".RegisterActivity"
                  android:theme="@style/AppTheme.ActionBar.Transparent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".LoginActivity"
                  android:theme="@style/AppTheme.ActionBar.Transparent"/>
        <activity android:name=".CreateProjectActivity"
                  android:theme="@style/AppTheme.ActionBar.Transparent">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".OverviewActivity"/>
        </activity>

        <activity android:name=".ProjectOverviewActivity"
                  android:theme="@style/AppTheme.ActionBar.Transparent">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".OverviewActivity"/>
        </activity>

        <activity android:name=".StopWatchActivity"
                  android:theme="@style/AppTheme.ActionBar.Transparent"/>

        <activity android:name=".AboutActivity"
                  android:theme="@style/AppTheme.ActionBar.Transparent">
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value=".OverviewActivity"/>
        </activity>
    </application>
</manifest>